<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>@ViewBag.Title - @SettingsManager.Site.SiteName</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->
    <!--开启对web app的支持-->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="format-detection" content="telephone=no">
    <meta name="format-detection" content="date=no">
    <meta name="format-detection" content="address=no">
    <meta name="format-detection" content="email=no">
    <!-- 针对手持设备优化，主要是针对一些老的不识别viewport的浏览器，比如黑莓 -->
    <meta name="HandheldFriendly" content="true">
    <!-- 微软的老式浏览器 -->
    <meta name="MobileOptimized" content="320">
    <!-- uc强制竖屏 -->
    <meta name="screen-orientation" content="portrait">
    <!-- QQ强制竖屏 -->
    <meta name="x5-orientation" content="portrait">
    <!-- UC强制全屏 -->
    <meta name="full-screen" content="yes">
    <!-- QQ强制全屏 -->
    <meta name="x5-fullscreen" content="true">
    <!-- UC应用模式 -->
    <meta name="browsermode" content="application">
    <!-- QQ应用模式 -->
    <meta name="x5-page-mode" content="app">
    <!-- windows phone 点击无高光 -->
    <meta name="msapplication-tap-highlight" content="no">
    @RenderSection("header", required: false)

    <link href="~/Themes/@SettingsManager.Site.Theme/Content/iconfont/iconfont.css" rel="stylesheet" />
    <link href="~/Themes/@SettingsManager.Site.Theme/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Themes/@SettingsManager.Site.Theme/Content/css/animate.min.css" rel="stylesheet" />
    <link href="~/Themes/@SettingsManager.Site.Theme/Content/css/hover.min.css" rel="stylesheet" />
    <link href="~/Themes/@SettingsManager.Site.Theme/Content/css/Main.min.css" rel="stylesheet" />
    <script src="~/Scripts/compatibility/modernizr-2.8.3.min.js"></script>
    <!--[if lt IE 9]>
        <script src='https://cdn.jsdelivr.net/nwmatcher/1.2.5/nwmatcher.min.js'></script>
        <script src='https://cdn.jsdelivr.net/json2/0.2/json2.min.js'></script>
        <script src='https://cdn.rawgit.com/gisu/selectivizr/1.0.3/selectivizr.js'></script>
        <script src='https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js'></script>
        <script src='https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js'></script>
        <script src='https://cdn.jsdelivr.net/es5.shim/4.4.1/es5-shim.min.js'></script>
    <![endif]-->

</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">
        您使用的是<strong>老旧</strong>的浏览器，会对您的计算机安全造成威胁。请<a href="http://browsehappy.com/">升级您的浏览器</a>来提高您的用户体验。
        </p>
    <![endif]-->
    @Html.Partial("Header")

    @RenderBody()

    <!-- footer start ================================================== -->
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-2"><p class="logo"><img src="~/Themes/@SettingsManager.Site.Theme/Content/img/logo_bot.png" class="img-responsive" /></p></div>
                    <div class="col-md-8">
                        <div class="copyright">                           
                            <p>
                                版权所有：深圳市黑鸟志有限公司<br />
                                &copy; Copyright 2018 SHENZHEN BESKY ELECTRONIC TECHNOLOGY CO.,LTD <br /> 粤公网安备：<a href="http://www.miitbeian.gov.cn">@SettingsManager.Site.WebNumber</a>
                            </p>
                        </div>
                    </div>
                    <!-- BEGIN CALL TO ACTION PANEL ================================================== -->

                    <div class="col-md-2">
                        <div class="qrcode">
                            <img src="/Themes/@SettingsManager.Site.Theme/Content/img/qrcode_150.png" />                            
                        </div>
                    </div>


                </div>
            </div>



    </footer>
    <!-- /footer section end-->

    <div id="pusher" class="pusher">
        <div id="rightnav" class="rightnav" aria-hidden="true">
            @Html.Action("SiteNav", "Menu")
        </div>
    </div>

    <!-- The Scripts -->
    <!--[if lte IE 8]>
    <script src="~/scripts/lib/jqueryForIE/jquery-1.11.3.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="~/scripts/lib/jquery/jquery-2.2.0.min.js"></script>
    <!--<![endif]-->

    @RenderSection("footer", required: false)
    <script src="~/Themes/@SettingsManager.Site.Theme/Content/js/app.js"></script>


</body> 
</html>
