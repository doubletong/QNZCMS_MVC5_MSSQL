@model Product

@{

    PageMeta pm = (PageMeta)ViewBag.PageMeta;
    ViewBag.Title = pm != null ? pm.Title : Model.ProductName + Model.ProductNo;
}

@section header{
    @if (pm != null)
    {
        <meta name="description" content="@pm.Description" />
        <meta name="keywords" content="@pm.Keyword" />
    }


    <link href="~/Plugins/owl.carousel/assets/owl.carousel.css" rel="stylesheet" />
}

<div class="container">
    <ol class="breadcrumb">
        <li><a href="/">首页</a></li>
        <li><a href="@Url.Action("Index")">产品展示</a></li>
        <li class="active">@Model.ProductName</li>
    </ol>
</div>



<!-- PAGE TITLE ================================================== -->
<div class="container pt40">
    <header class="title">
        <h2 class="animated fadeInLeftBig">@Model.ProductName</h2>
        @*<p class="animated fadeInRightBig">
                @Model.Product.Summary
            </p>*@
    </header>
</div>



<section class="container page-products m-b-50">
    <div class="row ">
        <div class="col-md-10 col-md-offset-1">
            <!-- PROJECT SLIDER   ================================================== -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {

        <div class="owl-carousel">
            @foreach (var photo in Model.ImageUrl.Split('|'))
    {
        <div class="item"><img src="@photo" /></div>
}
        </div>

}
            <hr />
            <div class="product-title">
                <section class="share">
                    <div class="bdsharebuttonbox hidden-xs">
                        <a href="#" class="bds_more" data-cmd="more"></a><a href="#" class="bds_qzone" data-cmd="qzone" title="分享到QQ空间"></a><a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信"></a><a href="#" class="bds_tqq" data-cmd="tqq" title="分享到腾讯微博"></a><a href="#" class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a><a href="#" class="bds_twi" data-cmd="twi" title="分享到Twitter"></a><a href="#" class="bds_fbook" data-cmd="fbook" title="分享到Facebook"></a><a href="#" class="bds_tqf" data-cmd="tqf" title="分享到腾讯朋友"></a><a href="#" class="bds_sqq" data-cmd="sqq" title="分享到QQ好友"></a>
                    </div>
                </section>
                <h3>产品描述 <small>Product description</small></h3>
            </div>
            <div class="well">
                <ul class="row">
                    <li class="col-sm-3"><label>型号：</label>@Model.ProductNo</li>
                    <li class="col-sm-3"><label>品名：</label>@Model.ProductName</li>
                    <li class="col-sm-3"><label>类别：</label>@Model.CategoryTitle</li>
                    <li class="col-sm-3"><label>查看：</label>@Model.ViewCount</li>

                </ul>
            </div>
            <div class="body-product">
                @Html.Raw(Model.Body)
            </div>

            @*<h3 class="smalltitle">
            <span>相关下载 <small>Downloads</small></span>
        </h3>
        <div class="body-product">
            @Html.Action("DocForProduct", "Download", new { productNo = Model.Product.ProductNo })
        </div>*@

        </div>
    </div>
</section>


