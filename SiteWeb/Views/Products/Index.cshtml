@model IEnumerable<SimpleProductVM>
@{
    PageMeta pm = (PageMeta)ViewBag.PageMeta;
    ViewBag.Title = pm != null ? pm.Title : "产品展示";
}
@section header{
    @if (pm != null)
    {
        <meta name="description" content="@pm.Description" />
        <meta name="keywords" content="@pm.Keyword" />
    }
}

@Html.Action("SingleAd", "AD", new { code = "A1007" })

<div class="page page-products">
    <section class="container s1">
        <h2 class="title title-section">产品中心</h2>
        <div class="productlist">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <a href="@Url.Action("Detail", new { id= item.Id})" class="item">
                            <div class="pic"><img src="@item.Thumbnail" alt="@item.ProductName" /></div>
                            <div class="text">
                                <h3>@item.ProductName</h3>
                                <p>@item.Summary</p>
                                <div class="more">查看更多</div>
                            </div>
                        </a>

                    </div>
                }

            </div>
        </div>
    </section>

    @Html.Action("Paragraph", "Pages", new { seoName = "training" })

</div>