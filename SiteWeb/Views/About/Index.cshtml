@model IEnumerable<AlbumVM>

@{

    QNZ.Data.PageMeta pm = (QNZ.Data.PageMeta)ViewBag.PageMeta;
    ViewBag.Title = pm != null ? pm.Title : "关于我们";
}

@section header{
    @if (pm != null)
    {
        <meta name="description" content="@pm.Description" />
        <meta name="keywords" content="@pm.Keyword" />
    }
}


@*@Html.Action("SingleAd", "AD", new { code = "A1002" })*@
@*@Html.Action("Paragraph", "Pages", new { seoName ="about" })*@


<div class="page-about">

    <section class="s1">
        <div class="content">
            <img src="~/Content/img/logo-min.png" alt="云门集团简介" class="min-logo wow fadeInDown" />
            <h3 class="title wow fadeInUp" data-wow-duration="2s">
                云门集团简介
            </h3>
            <p class="wow fadeInLeft" data-wow-duration="2s" data-wow-delay="1s">
                居山林，润玉泉，<br/>
                深耕百载，青叶密雨，<br />
                云门匠制，手造天成。
            </p>
        </div>
    </section>
    <section class="s2">
        <h3 class="title wow fadeInUp">云门图集</h3>
        <div class="container albums">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 px-md-4">
                        <a href="@Url.Action("Photos",new { albumId =  item.Id})" class="item wow fadeInUp">
                            <div class="pic"><img src="@item.Cover" alt="@item.Title" /></div>
                            <h4>@item.Title</h4>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
 
</div>


@section footer{

    <script>
        $(function () {
            
              
            $("#progress").height("100%");         
            $("#overly").fadeOut(1000);

          if (Modernizr.mq('(max-width: 991px)')) {
                $("#site-header").css({ "top": "0" });
                setTimeout(function () {
                    $("#progress").css({ "left": "-65px" });
                }, 300);

            } else {
                    $("#site-header").css({ "left": "0" });
            }
          
        })
    </script>
}
