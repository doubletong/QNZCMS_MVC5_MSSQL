@model TZGCMS.Model.Front.HomeVM
@{

    PageMeta pm = (PageMeta)ViewBag.PageMeta;
    ViewBag.Title = pm != null ? pm.Title : SettingsManager.Site.SiteName;


}

@section header{
    @if (pm != null)
    {
        <meta name="description" content="@pm.Description" />
        <meta name="keywords" content="@pm.Keyword" />
    }
    <link href="~/Plugins/swiper/css/swiper.min.css" rel="stylesheet" />

}


@Html.Action("Carousels", "AD", new { code = "A1001" })





@section footer{
    <script src="~/Plugins/waitforimages/jquery.waitforimages.min.js"></script>
    <script>
  
        $(document).ready(function () {
            $('body').waitForImages().progress(function (loaded, count, success) {
         
               console.log(loaded + ' of ' + count + ' images has ' + (success ? 'loaded' : 'failed to load') +  '.');
                // $(this).addClass('loaded');
                var ph = loaded / count * 100;

                $("#progress").height(ph + "%");
                if (ph > 90) {
                    $("#progress").height("100%");                  
                    $(".logo1").addClass("show");

                    if (Modernizr.mq('(max-width: 991px)')) {
                        $("#site-header").css({ "top": "0" });
                        setTimeout(function () {
                            $("#progress").css({ "left": "-65px" });
                        }, 1000);

                    } else {
                          $("#site-header").css({ "left": "0" });
                    }

                    setTimeout(function () {
                        $("#shishow").addClass("show");
                    },1000);
                    setTimeout(function () {
                        $(".imgfooter").addClass("show");
                    }, 2000)

                    setTimeout(function () {
                        $("#overly").fadeOut(3000);
                    },3000)
                }
            });

        });
    </script>
    <script src="~/Plugins/swiper/js/swiper.min.js"></script>

    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: {
                el: '.swiper-pagination',
            },
        });
