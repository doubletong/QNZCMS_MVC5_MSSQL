                    //}
                    //if (destination.index === 3) {
                    //    $(".section4 .pic").addClass("animated fadeInLeft");
                    //    $(".section4 .text").addClass("animated fadeInRight");
                    //}
                }
            });

            //methods
            $.fn.fullpage.setAllowScrolling(true);



        });


    </script>
}
