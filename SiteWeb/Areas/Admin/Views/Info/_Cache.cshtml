@model SiteCacheIM

@using (Ajax.BeginForm("CloseSite", null, new AjaxOptions()
{
    OnBegin = "onBegin",
    OnComplete = "onComplete",
    //   Confirm = "Are you sure you want to save this User?"
    OnSuccess = "onSuccess"

}, new { role = "form" }))
{

    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary()*@


    <div class="card">
        <div class="card-header">
            缓存设置
        </div>
        <div class="card-body">


            <div class="form-group row">
                @Html.LabelFor(model => model.CacheDuration, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.CacheDuration, new { @class = "form-control", placeholder = Labels.CacheDuration })
                    @Html.ValidationMessageFor(model => model.CacheDuration)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">开关</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.EnableCaching, new { @class = "form-check-input" })
                        @Html.LabelFor(model => model.EnableCaching, new { @class = "form-check-label", @for = "EnableCaching" })
                    </div>
                </div>
            </div>

        </div>


        <div class="card-footer">
       
                <button type="submit" class="btn btn-primary"><i class="iconfont icon-save"></i> 保存</button>
         
        </div>
    </div>
}
