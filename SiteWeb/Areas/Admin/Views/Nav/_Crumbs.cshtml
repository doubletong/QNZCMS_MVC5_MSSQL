@model List<Menu>


@{
    int i = 0;
}


<div class="toolbar">  
        <a href="#" class="showmenu"><i class="fa fa-bars"></i></a>
    <ol class="breadcrumb">
        @foreach (var item in Model)
        {
            i++;
            if (i == Model.Count())
            {
                <li class="active">@item.Title</li>

            }
            else if (i == 1)
            {
                <li><a href="@item.Url"><i class="@item.Iconfont"></i> @item.Title</a></li>
            }
            else
            {

                <li><a href="@item.Url">@item.Title</a></li>
            }
        }
    </ol>
</div>
