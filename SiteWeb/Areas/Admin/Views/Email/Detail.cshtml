@model Email
@{
    ViewBag.Title = "邮件：" + Model.Subject;
}

<section class="panel panel-default">
    <header class="panel-heading clearfix">      
            <div class="pull-right">
                <a href="@Url.Action("Reply",new { id=Model.Id})" class="btn btn-primary"><i class="fa fa-mail-reply-all fa-fw"></i>回复</a>
            </div>
        <h3 class="panel-title">
            <i class="fa fa-envelope-o fa-fw"></i> @Model.Subject
        </h3>
    </header>
    <div class="panel-body">
        <dl class="dl-horizontal">           
            <dt>发件人</dt>
            <dd>@Model.CreatedBy (@Model.MailTo)</dd>
            <dt>时间</dt>
            <dd>@Model.CreatedDate</dd>
           
        </dl>
        <div class="well">
            @Html.Raw(Model.Body)
        </div>
    </div>
    <footer class="panel-footer text-center">
        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-left fa-fw"></i>返回</a>
    </footer>
</section>

