@model OutletListVM

@{
    ViewBag.Title = EntityNames.Outlet;
    ViewBag.PageTitle = ViewBag.Title + "_组件";
}


<div class="panel panel-default">
    <div class="panel-heading">
        @Ajax.RawActionLink("<i class='fa fa-plus fa-fw'></i>添加" + EntityNames.Outlet,
                          "Create", "Outlet",
                          new { },
                          new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "edit-container", OnComplete = "onAjaxComplete", OnSuccess = "OnSuccessLink" },
                          new { title = "创建" + EntityNames.Outlet, @class = "btn btn-primary pull-right" })

        <form class="form-inline">
            <div class="form-group">
                <label for="Keyword">关键字</label>
                @Html.TextBoxFor(model => model.Keyword, new { @class = "form-control" })

            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-search fa-fw"></i>查找</button>
        </form>
    </div>
     <table class="table table-hover table-vmiddle">
        <thead>
            <tr>

                <th>
                    名称
                </th>
                <th>
                    地址
                </th>
                <th>
                    坐标
                </th>
                <th>
                    联系人
                </th>
                <th>
                    联系方式
                </th>
                <th>
                    排序
                </th>
                <th>
                    激活？
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbList">
            @Html.Partial("_OutletList", Model.Outlets)
        </tbody>
    </table>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-7">
                @Html.PagedListPager(Model.Outlets, page => Url.Action("Index", new { page = page, keyword = Model.Keyword }))
            </div>
            <div class="col-sm-5">
                <div class="form-inline text-right">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon3"> 总记录<strong>@Model.TotalCount</strong>条，分页</span>
                        @Html.DropDownListFor(m => Model.PageSize, (SelectList)ViewBag.PageSizes, "分页", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

